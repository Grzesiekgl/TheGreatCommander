<%#*INFO: left panel style%>
  
div#show_player_avatar{
    width: <%= @AVA_PROFILE_SIZE_X %>px;
    padding: 5px 15px 9px 15px;
}

div#left_s_panel{    
    width: <%= @LEFT_S_PANEL_WIDTH%>px;
    float: left;
}

div#left_s_panel_details{    
    width: <%= @LEFT_S_PANEL_WIDTH%>px;
    background-color: <%= @color_desert_sand %>;
    float: left;
    font-size: 11px;
}

div#right_s_panel_details{    
    width: <%= @LEFT_S_PANEL_WIDTH%>px;
    background-color: <%= @color_desert_sand %>;
    float: left;
    font-size: 11px;
}

div#right_s_panel_statistics{    
    width: <%= @LEFT_S_PANEL_WIDTH%>px;
    background-color: <%= @color_yellow_mist %>;
    float: left;
    font-size: 11px;
}

div.left_s_panel_title{
    width: <%= @leftpanel_width - @DEFAULT_BORDER * 2%>px; 
    height: 30px;
    text-align: center;
    font-size: 12px;
    font-size: bold;
    <%#*background-color: #FADFAD;%>
    vertical-align: middle;
}

div#gold_field{
    font-weight: bold;
}


div.ready_image{
    width: 30px;
    height: 20px;
    margin-left: 8px;
    margin-top: -20px;
    <%#*display: none;%>
}
