<div class = "default_style">
  <div>
    <h3>Signup</h3>
    <%= error_messages_for :user %>
    <% form_for :user, :url => users_path, :html => {:id => 'user_form',
          :multipart => true} do |f| %>
      <table id="signup_fields" cellspacing="0" cellpadding="0" border="0">  
        <tr>
          <th>
            <%= f.label(:login, "Desired Login: ", :class => "label_signup") %>          
          </th>
          <td>
            <%= f.text_field :login , 
                  :onblur => "checkLoginAvailability($('user_login').value);",
                  :size => ConstValues::SIZE_OF_SIGNUP_FIELDS %>          
          <div class = "error_message" id = "login_availability" style="display: none" ></div>
          </td>
          <td>
            <div id = "login_checking" style = "display: none">
              <%=image_tag("interactive_elements/ajax_loader.gif") %>
            </div>
          </td>             
        </tr>      

        <tr>
          <th>
            <%= f.label(:passowrd, "Password: ", :class => "label_signup") %>
          </th>
          <td>
            <%= f.password_field :password, 
              :size => ConstValues::SIZE_OF_SIGNUP_FIELDS %>
          </td>
        </tr>

        <tr>
          <th>
            <%= f.label(:password_confirmation, "Confirm password: ",
                 :class => "label_signup") %>
          </th>
          <td>
            <%= f.password_field :password_confirmation,
              :size => ConstValues::SIZE_OF_SIGNUP_FIELDS%>
          </td>
        </tr>

        <tr>
          <th>
            <%= f.label(:email, "Email: ", :class => "label_signup") %>
          </th>
          <td>
             <%= f.text_field :email,
               :size => ConstValues::SIZE_OF_SIGNUP_FIELDS-%>
          </td>
        </tr>

        <tr>
          <th>
            <%= f.label(:gender, "Gender: ", :class => "label_signup") %>
          </th>
          <td>         
               <%= f.radio_button :gender,"Male" %>Male          
               <%= f.radio_button :gender,"Female" %>Female    
          </td>
        </tr>

         <tr>
          <th>
            <%= f.label(:age, "Date of birth: ", :class => "label_signup") %>
          </th>
          <td>
             <%= f.date_select :date_of_birth,:start_year => 1900,
               :include_blank => true,:size => ConstValues::SIZE_OF_SIGNUP_FIELDS -%>
          </td>
        </tr>

        <tr>
          <th>
            <%= f.label(:avatar, "Avatar: ", :class => "label_avatar") %>
          </th>
          <td>         
            <%= f.file_field  :avatar, :size => 24 %>         
              Please upload file in size <%=ConstValues::AVATAR_SIZE_X%>x<%=ConstValues::AVATAR_SIZE_Y%>,
              otherwise it will by scaled.
          </td>
        </tr>

        <tr>     
          <td/>
          <td>
              <%= submit_tag 'Sign up'-%>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
</div>

